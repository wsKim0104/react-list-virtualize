{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "dom",
      "dom.iterable",
      "es2021"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny":true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl":"./",
    "paths":{
      "@apis/*": ["./src/apis/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@pages/*": ["./src/pages/*"],
			"@stores/*": ["./src/stores/*"],
			"@typings/*": ["./src/typings/*"],
			"@utils/*": ["./src/utils/*"],
			"@routes/*": ["./src/routes/*"],
			"@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["./src", "craco.config.js"],
	"exclude": ["node_modules"]
}
